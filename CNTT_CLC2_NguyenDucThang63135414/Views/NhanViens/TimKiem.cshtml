@*@model List<CNTT_CLC2_NguyenDucThang63135414.Models.NhanVien>*@
@model PagedList.IPagedList<CNTT_CLC2_NguyenDucThang63135414.Models.NhanVien>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    string gtinh = "";
    int stt = 1;
}
@using (Html.BeginForm())
{

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div>
                <h4 class="m-0 font-weight-bold text-primary">
                    DANH SÁCH QUẢN LÝ NHÂN VIÊN
                </h4>

            </div>

        </div>
        <br>
        <div class="d-flex align-items-center justify-content-center">
            <a href="@Url.Action("Create")" class="btn btn-success" style="width: 50%;">
                Đăng ký nhân viên mới
            </a>

            <input type="text" name="maNV" class="form-control mx-2" placeholder="Mã nhân viên" aria-label="Mã nhân viên" aria-describedby="basic-addon">
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
        </div>


        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="text-center">
                        <tr>
                            <th>STT</th>
                            <th>Mã NV</th>
                            <th>Họ</th>
                            <th>Tên</th>
                            <th>Giới tính</th>
                            <th>Ngày sinh</th>
                            <th>Lương</th>
                            <th>Địa chỉ</th>
                            <th>Phòng ban</th>
                            <th>Quản lý</th>
                        </tr>
                    </thead>
                    @if (Model != null && Model.Any())
                    {
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @stt
                                        @{stt++;}
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.MaNV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HoNV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TenNV)</td>
                                    <td>
                                        @{if (item.GioiTinh == true)
                                            { gtinh = "Nam"; }
                                            else
                                            { gtinh = "Nữ"; }
                                        }
                                        @gtinh
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Luong)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PhongBan.TenPB)</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", new { id = item.MaNV })" class="btn btn-success btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.MaNV })" class="btn btn-primary btn-sm">
                                            <i class="fa fa-address-card"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.MaNV })" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <nav aria-label="Page navigation">
                <ul class="pagination">

                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("TimKiem", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("TimKiem", new { page = i })">@i</a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("TimKiem", new { page = Model.PageNumber + 1 })" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }

                </ul>
            </nav>
        </div>

    </div>
}
