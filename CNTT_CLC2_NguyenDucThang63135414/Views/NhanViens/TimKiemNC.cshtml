@model List<CNTT_CLC2_NguyenDucThang63135414.Models.NhanVien>

@{
    ViewBag.Title = "TimKiemNC";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
            background-color: #ffffff;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
                border-radius:5px;
            }

                .grid-footer a:active {
                    background-color: #ffffff;
                    color: blue;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }     
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("TimKiemNC", "NhanViens", FormMethod.Get))
        {
            @Html.AntiForgeryToken()
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <table class="form-control mx-2 ">
                        <tr>
                            <td>
                                <div> Mã nhân viên</div>
                            </td>
                            <td>
                                <input class="form-control" type="text" name="maNV" value="@ViewBag.maNV" />
                            </td>

                        </tr>
                        <tr class="mb-5">
                            <td>Họ tên</td>
                            <td>
                                <input class="form-control" type="text" name="tenNV" value="@ViewBag.hoTen" />
                            </td>

                        </tr>
                        <tr>
                            <td>Giới tính</td>
                            <td>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gioiTinh" id="nam" value="1" @if (ViewBag.gioiTinh == "1") { <text> checked</text> }>
                                    <label class="form-check-label" for="nam">Nam</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gioiTinh" id="nu" value="0" @if (ViewBag.gioiTinh == "0") { <text> checked</text> }>
                                    <label class="form-check-label" for="nu">Nữ</label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Lương từ</td>
                            <td><input class="form-control" type="text" name="luongMin" value="@ViewBag.luongMin" /></td>
                            <td>

                                Đến
                            </td>
                            <td><input class="form-control" type="text" name="luongMax" value="@ViewBag.luongMax" /></td>
                        </tr>

                        <tr>
                            <td>Địa chỉ</td>
                            <td>
                                <input class="form-control" type="text" name="diaChi" value="@ViewBag.diaChi" />
                            </td>
                        </tr>
                        <tr>
                            <td>Phòng ban</td>
                            <td>
                                @Html.DropDownList("MaPB", null, "Tất cả", htmlAttributes: new { @class = "form-control" })
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" name="submit" value="Tìm kiếm" class="btn btn-primary" />
                                <input type="button" class="btn btn-secondary" name="Nhapmoi" value="Nhập mới" ; onclick="location.href='@Url.Action("TimKiemNC", "NhanViens/TimKiemNC")'" />

                            </td>
                        </tr>
                    </table>
                </div>

            </div>
           
        </div>
           

        }
    </div>
    <div id="gridContent">
        @ViewBag.TB
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <tbody>
                    @grid.GetHtml(
                        tableStyle: "table table-bordered table-hover",
                        footerStyle: "grid-footer",
                        fillEmptyRows: true,
                        mode: WebGridPagerModes.Numeric,
                        alternatingRowStyle: "alternatingRowStyle",
                        columns: new[]
                        {
                            grid.Column("STT", format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                            grid.Column("MaNV", "Mã nhân viên"),
                            grid.Column("HoNV", "Họ nhân viên"),
                            grid.Column("TenNV", "Tên nhân viên"),
                            grid.Column("GioiTinh", "Giới tính", format: (@item) => @item.GioiTinh ? "Nam" : "Nữ"),
                            grid.Column("NgaySinh", "Ngày sinh", format: @<text>@item.NgaySinh.ToString("dd/MM/yyyy")</text>),
                            grid.Column("Luong", "Tiền lương", format: @<text>@item.Luong.ToString("#,##0")</text>),
                            grid.Column("DiaChi", "Địa chỉ"),
                            grid.Column("PhongBan.TenPB", "Phòng ban"),
                            grid.Column("Chức năng", format: @<text>
                                <a href="@Url.Action("Edit", new { id = item.MaNV })" class="btn btn-primary" title="Cập nhật dữ liệu"><i class="fa fa-edit"></i></a>
                                <a href="@Url.Action("Details", new { id = item.MaNV })" class="btn btn-info" title="Xem chi tiết"><i class="fa fa-eye"></i></a>
                                <a href="@Url.Action("Delete", new { id = item.MaNV })" class="btn btn-danger" title="Xóa dữ liệu"><i class="fa fa-trash"></i></a>
                            </text>),
                        }
                        )
                </tbody>
            </table>
        </div>

    </div>

</body>
</html>